@using Libreria.CasoUsoCompartida.DTOS.Agency
@using Libreria.CasoUsoCompartida.DTOS.Users
@model Libreria.WebApp.Models.VMShipment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="TrackingNumber" class="control-label"></label>
                <input asp-for="TrackingNumber" class="form-control" />
                <span asp-validation-for="TrackingNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            @{
                var usersSelectList = ViewBag.Users != null
                ? ((List<DtoListedUser>)ViewBag.Users).Select(u => new SelectListItem
            {

                Value = u.Id.ToString(),
                Text = $"{u.Id} - {u.Name} {u.LastName}"
            }).ToList()
                : new List<SelectListItem>();

            }

            <div class="form-group">
                <label asp-for="EmployeeId">Empleado asignado</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="usersSelectList">
                    <option value="">Select a user</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="TipoEnvio" class="control-label"></label>
                <select asp-for="TipoEnvio" class="form-control">
                    <option value="COMMON">COMMON</option>
                    <option value="URGENT">URGENT</option>
                </select>
                <span asp-validation-for="TipoEnvio" class="text-danger"></span>
            </div>


            <div id="pickupAgencyDiv" class="form-group" style="display:none;">
                @{
                    var agenciesSelectList = ViewBag.Agencies != null
                    ? ((List<DtoListedAgency>)ViewBag.Agencies).Select(u => new SelectListItem
            {
                Value = u.id.ToString(),
                Text = $"{u.id} - {u.name}"
            }).ToList()
                    : new List<SelectListItem>();
                }
                <label asp-for="PickupAgency" class="control-label"></label>
                <select asp-for="PickupAgency" class="form-control" asp-items="agenciesSelectList">
                    <option value="">Seleccione una agencia</option>
                </select>
                <span asp-validation-for="PickupAgency" class="text-danger"></span>
            </div>

            <div id="postalAddressDiv" class="form-group" style="display:none;">
                <label asp-for="PostalAddress" class="control-label"></label>
                <input asp-for="PostalAddress" class="form-control" />
                <span asp-validation-for="PostalAddress" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector('select[name="TipoEnvio"]').addEventListener('change', function () {
            var tipoEnvio = this.value;
            if (tipoEnvio === 'COMMON') {
                document.getElementById('pickupAgencyDiv').style.display = 'block';
                document.getElementById('postalAddressDiv').style.display = 'none';
            } else if (tipoEnvio === 'URGENT') {
                document.getElementById('pickupAgencyDiv').style.display = 'none';
                document.getElementById('postalAddressDiv').style.display = 'block';
            }
        });
        document.querySelector('select[name="TipoEnvio"]').dispatchEvent(new Event('change'));
    </script>
}
