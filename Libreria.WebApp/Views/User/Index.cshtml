@using Libreria.CasoUsoCompartida.DTOS.Users
@model IEnumerable<DtoListedUser>

@{
    ViewData["Title"] = "Index";
}
<p>Tu rol es: @ViewBag.rol</p>

<p>
    <a asp-controller="Shipment" asp-action="Index">Ver envíos</a>
</p>

<h1>Listado de usuario</h1>

<p>
    <a asp-action="Create">New User</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Modify", new { id = item.Id }) |
                    @Html.ActionLink("Detalle", "Detail", new { id = item.Id }) |
                    @Html.ActionLink("Borrar", "Remove", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>